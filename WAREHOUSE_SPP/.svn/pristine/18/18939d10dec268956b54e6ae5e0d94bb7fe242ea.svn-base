<uicore:ControlBase x:Class="DSofT.Warehouse.UI.frmKiemKeHangHoa"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSofT.Warehouse.UI"
             mc:Ignorable="d" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
             xmlns:uicore="clr-namespace:DSofT.Framework.UICore;assembly=DSofT.Framework.UICore"
             xmlns:resText="clr-namespace:DSofT.Warehouse.Resources;assembly=DSofT.Warehouse.Resources"
             xmlns:cntr="clr-namespace:DSofT.Framework.UIControl;assembly=DSofT.Framework.UIControl" 
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Controls="clr-namespace:DSofT.Framework.Metro.UIControls;assembly=DSofT.Framework.Metro.UIControls" 
             d:DesignHeight="600" d:DesignWidth="1600">
    <uicore:ControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DSofT.Warehouse.Resources;component/CommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </uicore:ControlBase.Resources>
    <Grid Background="Transparent">
        <Grid.Resources>
            <cntr:ConverterStringDateTime x:Key="ConverterStringDateTime"/>
        </Grid.Resources>
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:NotificationService x:Name="notificationService" ApplicationId="DxToastTest" UseWin8NotificationsIfAvailable="True" 
                                  PredefinedNotificationTemplate="{Binding ElementName=notificationStyle, Path=SelectedItem}"
                                  CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"
                                  Sound="Notification_Looping_Alarm8"
                                  CustomNotificationPosition="BottomRight" CustomNotificationVisibleMaxCount="5" CustomNotificationDuration="0:0:3"/>
        </dxmvvm:Interaction.Behaviors>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Border x:Name="BrdBtnWrap" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Width="Auto" Style="{StaticResource Sdk.Brd.BtnArea}">
            <StackPanel Width="Auto" Style="{StaticResource Sdk.Spnl.CommBtn.Right}">
                <Button Tag="{StaticResource btnRefresh}" HorizontalAlignment="Right" Name="btnRefresh"  Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" />
                <Button Tag="{StaticResource btnDelete}" HorizontalAlignment="Right" Name="btnDelete"  Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" />
                <Button Tag="{StaticResource btnNew}" HorizontalAlignment="Right" Name="btnNew"  Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnNew_Click" />
            </StackPanel>
        </Border>
        <dxg:GridControl  AutoPopulateColumns="True" x:Name="grd"  Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <dxg:GridControl.View>
                <dxg:TableView NavigationStyle="Cell" ShowGroupPanel="False" ShowAutoFilterRow="True" SearchPanelFindMode="FindClick" UseAnimationWhenExpanding="False"
                                          x:Name="grdView" SearchPanelFindFilter="Contains" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        
        <dxg:GridControl  AutoPopulateColumns="True" x:Name="grid"  Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
            <dxg:GridControl.View>
                <dxg:TableView NavigationStyle="Cell" ShowGroupPanel="False" UseAnimationWhenExpanding="False"
                                          x:Name="grdView_LyDo" SearchPanelFindFilter="Contains" MouseDoubleClick="grdView_LyDo_MouseDoubleClick"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</uicore:ControlBase>
