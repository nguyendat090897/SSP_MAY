<uicore:PopupBase x:Class="DSofT.Warehouse.UI.frm_PhieuYeuCauXuatKho_popup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
             xmlns:uicore="clr-namespace:DSofT.Framework.UICore;assembly=DSofT.Framework.UICore"
             xmlns:resText="clr-namespace:DSofT.Warehouse.Resources;assembly=DSofT.Warehouse.Resources"
             xmlns:cntr="clr-namespace:DSofT.Framework.UIControl;assembly=DSofT.Framework.UIControl" 
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Controls="clr-namespace:DSofT.Framework.Metro.UIControls;assembly=DSofT.Framework.Metro.UIControls" 
             Height="600" Width="1200" >
    <uicore:PopupBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DSofT.Warehouse.Resources;component/CommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </uicore:PopupBase.Resources>
    <Grid Background="Transparent">
        <Grid.Resources>
            <cntr:ConverterStringDateTime x:Key="ConverterStringDateTime"/>
        </Grid.Resources>
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:NotificationService x:Name="notificationService" ApplicationId="DxToastTest" UseWin8NotificationsIfAvailable="True" 
                                  PredefinedNotificationTemplate="{Binding ElementName=notificationStyle, Path=SelectedItem}"
                                  CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"
                                  Sound="Notification_Looping_Alarm8"
                                  CustomNotificationPosition="BottomRight" CustomNotificationVisibleMaxCount="5" CustomNotificationDuration="0:0:3"/>
        </dxmvvm:Interaction.Behaviors>
        <Grid>

            <Grid.RowDefinitions>
                <!--Button Area-->
                <RowDefinition Height="Auto"/>
                <!--Blank-->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <!--Selection Area Style : row=2-->
            <Border x:Name="BrdBtnWrap" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}">
                <StackPanel Style="{StaticResource Sdk.Spnl.CommBtn.Right}">
                    <Button Tag="{StaticResource btnImportExcel}" HorizontalAlignment="Right" Name="btnImportExcel" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnImportExcel_Click"/>
                </StackPanel>
            </Border>
            <Border x:Name="nbcSearch" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}">
                <Grid x:Name="Selection_Area">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock  Grid.Row="0"   Grid.Column="0" Name="lblHinhThucXuat" VerticalAlignment="Center"><Run Text="{DynamicResource lblHinhThucXuat}"/></TextBlock>
                    <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="9" Name="txtHinhThucXuat" Text="{Binding HinhThucXuat}"/>
                    

                    <TextBlock  Grid.Row="1"   Grid.Column="0" Name="SoPhieu" VerticalAlignment="Center"><Run Text="{DynamicResource frmFoodMenu_FoodMenuCode}"/></TextBlock>
                    <dxe:TextEdit Grid.Row="1" Grid.Column="1"  Name="txtSoPhieu" Text="{Binding SoPhieu}"/>
                    <TextBlock  Grid.Row="1"   Grid.Column="2" Name="lblNgayXuat" VerticalAlignment="Center"><Run Text="{DynamicResource lblNgayXuat}"/></TextBlock>
                    <DatePicker Grid.Row="1" Grid.Column="3"   Name="dtpNgayXuat" />
                    <TextBlock  Grid.Row="1"   Grid.Column="4" Name="lblSoChungTu" VerticalAlignment="Center"><Run Text="{DynamicResource lblSoChungTu}"/></TextBlock>
                    <dxe:TextEdit Grid.Row="1" Grid.Column="5" Name="txtSoChungTu" Text="{Binding SoChungTu}"/>
                    <TextBlock  Grid.Row="1"   Grid.Column="6" Name="lblNgayCT" VerticalAlignment="Center"><Run Text="{DynamicResource lblNgayCT}"/></TextBlock>
                    <DatePicker Grid.Row="1" Grid.Column="7"   Name="dtpNgayCT" />
                    <TextBlock  Grid.Row="1"   Grid.Column="8" Name="lblTongTien" VerticalAlignment="Center"><Run Text="{DynamicResource lblTongTien}"/></TextBlock>
                    <dxe:TextEdit Grid.Row="1" Grid.Column="9"  Name="txtTongTien" MaskType="Numeric" Text="{Binding TongTien}"/>

                    <TextBlock  Grid.Row="2"   Grid.Column="0" Name="KhachHang" VerticalAlignment="Center"><Run Text="{DynamicResource rdbKH}"/></TextBlock>
                    <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="3" Name="txtKhachHang" Text="{Binding frmImportWarehousingMaterials_WarehouseId}"/>
                    <TextBlock  Grid.Row="2"   Grid.Column="4" Name="lblGhiChu" VerticalAlignment="Center"><Run Text="{DynamicResource frmMenu_MenuRemark}"/></TextBlock>
                    <dxe:TextEdit Grid.Row="2" Grid.Column="5"  Grid.ColumnSpan="7" Grid.RowSpan="2" Name="txtGhiChu" TextWrapping="Wrap" Text="{Binding frmMenu_MenuRemark}"/>

                    <TextBlock  Grid.Row="3"   Grid.Column="0" Name="lblLoaiHang" VerticalAlignment="Center"><Run Text="{DynamicResource lblLoaiHang}"/></TextBlock>
                    <dxe:ComboBoxEdit Grid.Row="3" Grid.Column="1"  Grid.ColumnSpan="3" Name="txtLoaiHang" Text="{Binding LoaiHang}"/>

                    
                </Grid>
            </Border>
            <Border x:Name="nbcgrid" Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}">
                <Grid Grid.Row="2" x:Name="Body_Area" Grid.Column="0" Style="{StaticResource Sdk.Grd.BodyWrap.Vessel}">
                    <dxg:GridControl AutoPopulateColumns="True" x:Name="grd"  Grid.Row="1" Grid.Column="0">
                        <dxg:GridControl.View>
                            <dxg:TableView AutoWidth="False"  NavigationStyle="Cell" ShowGroupPanel="False" ShowAutoFilterRow="True" SearchPanelFindFilter="Contains"  SearchPanelFindMode="FindClick"  UseAnimationWhenExpanding="False"
                                          x:Name="grdView" />
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</uicore:PopupBase>