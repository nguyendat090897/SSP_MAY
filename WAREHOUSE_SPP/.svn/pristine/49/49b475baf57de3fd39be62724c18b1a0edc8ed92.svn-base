    static public bool IsValidInt(string val)
    {
        return Regex.IsMatch(val, @"^[0-9]\d*\.?[0]*$");
    }

    static public bool IsValidDate(string val)
    {
        Regex r = new Regex(@"\d{2}/\d{2}/\d{4}");
        return r.IsMatch(val);

    }

