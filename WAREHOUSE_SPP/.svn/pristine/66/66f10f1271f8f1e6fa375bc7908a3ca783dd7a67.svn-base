                            dst.Rows[0]["RowVersion"],
                            CommonDataHelper.UserName
                             };
                    var result = base.ExecScalar("DM_KHO_VITRI_INSERT", paramObj);
                    if (NumberHelper.ConvertStringToLong(result.ToString()) > 0)
                    {
                        return true;
                    }
                    return false;
                }
            }
            catch (System.Exception ex)
            {
                throw ex;
            }
        }

