                            dst.Rows[0]["VITRI"],
                            dst.Rows[0]["MA_VACH"],
                            dst.Rows[0]["TINH_TRANG"],
                            dst.Rows[0]["RowVersion"],
                            CommonDataHelper.UserName
                             };
                    var result = base.ExecScalar("DM_KHO_VITRI_UPDATE", paramObj);
                    if (NumberHelper.ConvertStringToLong(result.ToString()) > 0)
                    {
                        return true;
                    }
                    return false;
                }
