                xDicUser.Add("MA_DVIQLY", typeof(string));
                xDicUser.Add("LOAI_PALLET_ID", typeof(decimal));
                xDicUser.Add("TEN_LOAI_PALLET", typeof(string));
                xDicUser.Add("LOAI_KTHUOC_ID", typeof(decimal));
                xDicUser.Add("MA_SIZE", typeof(string));
