        private void LoadData_GrdSP()
        {
            try
            {
                string itemType = (string)cboItemType.EditValue;
                int idLoaiSP = int.Parse(grdLoaiSP.GetFocusedRowCellValue("LOAI_SPHAM_ID").ToString());
                using (var task = new AsyncTaskProcess(this))
                {
                    ServiceAction<DataTable> action = ((pd) =>
                    {
                        task.SetCallContext();
                        if (itemType != string.Empty)
                            return _DM_SAN_PHAM.GetList_SanPham_By_Loai_SPham_And_Item_Type(idLoaiSP, itemType);
                        else
                            return _DM_SAN_PHAM.GetList_SanPham_By_Loai_SPham(idLoaiSP);


                    });
                    Action<DataTable> onComplete = (dt =>
                    {
                        this.Dispatcher.BeginInvoke((Action)(() =>
                        {
                            this.iGridDataSource = dt;
                            this.iGridHelper.BindItemSource(this.iGridDataSource);
                        }));
                    });
                    task.AsyncTaskExecute(action, onComplete);
                }
            }
            catch (Exception ex)
            {
                UtilLog.WriteLogToDB(LogGroupName.PROGRAM, ex.Message, this.GetType().Name, "LoadData_GrdSP()");
                base.ShowMessage(MessageType.Error, ex.Message, ex);
            }
        }
        

