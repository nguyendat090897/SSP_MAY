<uicore:PopupBase x:Class="DSofT.Warehouse.UI.frm_XDDinhMuc_BoSung_TTTViet_TimKiemSP_Kho"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
             xmlns:uicore="clr-namespace:DSofT.Framework.UICore;assembly=DSofT.Framework.UICore"
             xmlns:resText="clr-namespace:DSofT.Warehouse.Resources;assembly=DSofT.Warehouse.Resources"
             xmlns:cntr="clr-namespace:DSofT.Framework.UIControl;assembly=DSofT.Framework.UIControl" 
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Controls="clr-namespace:DSofT.Framework.Metro.UIControls;assembly=DSofT.Framework.Metro.UIControls" 
             d:DesignHeight="500" d:DesignWidth="1200" >
    <uicore:PopupBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DSofT.Warehouse.Resources;component/CommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </uicore:PopupBase.Resources>
    <Grid Background="Transparent">
        <Grid.Resources>
            <cntr:ConverterStringDateTime x:Key="ConverterStringDateTime"/>
        </Grid.Resources>
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:NotificationService x:Name="notificationService" ApplicationId="DxToastTest" UseWin8NotificationsIfAvailable="True" 
                                  PredefinedNotificationTemplate="{Binding ElementName=notificationStyle, Path=SelectedItem}"
                                  CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"
                                  Sound="Notification_Looping_Alarm8"
                                  CustomNotificationPosition="BottomRight" CustomNotificationVisibleMaxCount="5" CustomNotificationDuration="0:0:3"/>
        </dxmvvm:Interaction.Behaviors>
        <Grid>
            <!--Main Layout RowDefinition-->
            <Grid.RowDefinitions>
                <!--Button Area-->
                <RowDefinition Height="auto"/>
                <!--Blank-->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <!--Selection Area Style : row=2-->
            <Border x:Name="BrdBtnWrap2" Grid.Row="0" Style="{StaticResource Sdk.Brd.BtnArea}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock FontSize="15" Grid.Column="0" Text="Chọn kho"  HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                    <dxe:ComboBoxEdit Grid.Column="1"  Name="cboKho"   HorizontalAlignment="Left" VerticalAlignment="Center" ValidateOnTextInput="False" EditValue="{Binding KHO_ID,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IncrementalFiltering="True" ImmediatePopup="True" FilterCondition = "Contains" MinWidth="200" EditValueChanged="cboKho_EditValueChanged" />


                    <TextBlock FontSize="15" Grid.Column="2" Text="{StaticResource lblItemType}"  HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <dxe:ComboBoxEdit Grid.Column="3"  Name="cboItemType"  ValidateOnTextInput="False" HorizontalAlignment="Left" VerticalAlignment="Center"  EditValue="{Binding MA_ITEM_TYPE,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IncrementalFiltering="True" ImmediatePopup="True" FilterCondition = "Contains" MinWidth="200" EditValueChanged="cboItemType_EditValueChanged" />
                   

                </Grid>
            </Border>
            <Border x:Name="nbcSearch" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}">
                <Grid x:Name="Selection_Area">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Border>
            <Border x:Name="nbcgrid" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}"  >
                <dxg:GridControl AutoPopulateColumns="True" x:Name="grdSPALL" Width="Auto"  MouseDoubleClick="grdSPALL_MouseDoubleClick" >
                    <dxg:GridControl.View>
                        <dxg:TableView AutoWidth="True"  NavigationStyle="Cell" ShowGroupPanel="False"   ShowAutoFilterRow="True" SearchPanelFindFilter="Contains"  SearchPanelFindMode="FindClick" UseAnimationWhenExpanding="False"  HorizontalScrollbarVisibility="Visible"
                                          x:Name="grdViewSPALL"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </Border>
            <Button Grid.Column="4"  Grid.Row="3"  Click="btnChon_Click"  Tag="{StaticResource frm_phancong_thietbi_popup_Chon}" HorizontalAlignment="Left" Name="btnChon" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" />

            <Border x:Name="nbcgrqid" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}"  >
                <dxg:GridControl AutoPopulateColumns="True" x:Name="grdSPCHON" MouseDoubleClick="grdSPCHON_MouseDoubleClick" Width="Auto"  >
                    <dxg:GridControl.View>
                        <dxg:TableView AutoWidth="True"  NavigationStyle="Cell" ShowGroupPanel="False"  UseAnimationWhenExpanding="False"
                                          x:Name="grdViewSPCHON"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </Border>
        </Grid>
    </Grid>
</uicore:PopupBase>

