<uicore:PopupBase x:Class="DSofT.Warehouse.UI.frmQuanLyChi_Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
             xmlns:uicore="clr-namespace:DSofT.Framework.UICore;assembly=DSofT.Framework.UICore"
             xmlns:resText="clr-namespace:DSofT.Warehouse.Resources;assembly=DSofT.Warehouse.Resources"
             xmlns:cntr="clr-namespace:DSofT.Framework.UIControl;assembly=DSofT.Framework.UIControl" 
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Controls="clr-namespace:DSofT.Framework.Metro.UIControls;assembly=DSofT.Framework.Metro.UIControls" 
             Height="200" Width="800" >
    <uicore:PopupBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DSofT.Warehouse.Resources;component/CommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </uicore:PopupBase.Resources>
    <Grid Background="Transparent">
        <Grid.Resources>
            <cntr:ConverterStringDateTime x:Key="ConverterStringDateTime"/>
        </Grid.Resources>
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:NotificationService x:Name="notificationService" ApplicationId="DxToastTest" UseWin8NotificationsIfAvailable="True" 
                                  PredefinedNotificationTemplate="{Binding ElementName=notificationStyle, Path=SelectedItem}"
                                  CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"
                                  Sound="Notification_Looping_Alarm8"
                                  CustomNotificationPosition="BottomRight" CustomNotificationVisibleMaxCount="5" CustomNotificationDuration="0:0:3"/>
        </dxmvvm:Interaction.Behaviors>
        <Grid>
            <!--Main Layout RowDefinition-->
            <Grid.RowDefinitions>
                <!--Button Area-->
                <RowDefinition Height="auto"/>
                <!--Blank-->
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <!--Selection Area Style : row=2-->
            <Border x:Name="BrdBtnWrap" Grid.Row="0" Style="{StaticResource Sdk.Brd.BtnArea}">
                <StackPanel Style="{StaticResource Sdk.Spnl.CommBtn.Right}">
                    <Button Tag="{StaticResource btnSave}" HorizontalAlignment="Right" Name="btnSave" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnSave_Click"/>
                    <Button Tag="{StaticResource btnClose}" HorizontalAlignment="Right" Name="btnClose" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnClose_Click"/>
                </StackPanel>
            </Border>
            <Border x:Name="nbcSearch" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}">
                <Grid x:Name="Selection_Area">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock  Grid.Row="0"   Grid.Column="0" Name="lblNCC" VerticalAlignment="Center"><Run Text="{DynamicResource frmSupplier_SupplierName}"/><Run Text="{StaticResource lblDauSao}" Foreground="Red"/></TextBlock>
                    <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1"  Name="cbbNCC" EditValue="{Binding KHACHHANG_NCC_ID,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IncrementalFiltering="True"  FilterCondition="Contains" ImmediatePopup="True" IsTextEditable="True" ValidateOnTextInput="False" EditValueChanged="cbbNCC_EditValueChanged" />
                    <TextBlock  Grid.Row="0"   Grid.Column="2" Name="lblTenHD" VerticalAlignment="Center"><Run Text="{DynamicResource lblHopDong}"/><Run Text="{StaticResource lblDauSao}" Foreground="Red"/></TextBlock>
                    <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="3"   Name="cbbTenHD" EditValue="{Binding HOPDONG_ID,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IncrementalFiltering="True" IsTextEditable="True" FilterCondition="Contains" ImmediatePopup="True" ValidateOnTextInput="False"/>

                    <TextBlock  Grid.Row="1"   Grid.Column="0" Name="lblSoPhieuChi" VerticalAlignment="Center"><Run Text="{DynamicResource lblSoPhieuChi}"/><Run Text="{StaticResource lblDauSao}" Foreground="Red"/></TextBlock>
                    <dxe:TextEdit Grid.Row="1" Grid.Column="1"  Name="txtSoPhieuChi" Text="{Binding SO_PHIEUTHU}"/>
                    <TextBlock  Grid.Row="1"   Grid.Column="2" Name="lblNgayPhieu" VerticalAlignment="Center"><Run Text="{DynamicResource lblNgayPhieu}"/><Run Text="{StaticResource lblDauSao}" Foreground="Red"/></TextBlock>
                    <dxe:DateEdit Grid.Column="3" Grid.Row="1" MaskType="DateTime" Name="dtpNgayPhieu" MaskUseAsDisplayFormat="True" EditValue="{Binding NGAY_PHIEU, Converter={StaticResource ConverterStringDateTime}, ConverterParameter='dd/MM/yyyy', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Mask="dd/MM/yyyy" DisplayFormatString="dd/MM/yyyy" ShowClearButton="False" MaskAutoComplete="Strong" MaskSaveLiteral="False" />

                    <TextBlock  Grid.Row="2"   Grid.Column="0" Name="lblSoTien" VerticalAlignment="Center"><Run Text="{DynamicResource lblSoTien}" /><Run Text="{StaticResource lblDauSao}" Foreground="Red"/></TextBlock>
                    <dxe:TextEdit Grid.Row="2" Grid.Column="1"  Name="txtSoTien" EditValue="{Binding SO_TIEN}" MaskType="Numeric" Mask="#,##,##,##,##,##,##,##,##,##,##,##,##,##,##,##,##,##,##,##,##,###;" MaskUseAsDisplayFormat="True" />
                    <TextBlock  Grid.Row="2"   Grid.Column="2" Name="lblVND" VerticalAlignment="Center"><Run Text="{DynamicResource lblVND}" /></TextBlock>

                    <TextBlock  Grid.Row="3"   Grid.Column="0" Name="lblNguoiTao" VerticalAlignment="Center"><Run Text="{DynamicResource lblNguoiTao}" /></TextBlock>
                    <dxe:TextEdit Grid.Row="3" Grid.Column="1"  Name="txtNguoiTao" IsEnabled="False"/>

                    <TextBlock  Grid.Row="4"   Grid.Column="0" Name="lblghichu" VerticalAlignment="Center"><Run Text="{DynamicResource frmMenu_MenuRemark}" /></TextBlock>
                    <dxe:TextEdit Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"  Name="txtghichu" EditValue="{Binding GHI_CHU}" Height="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" VerticalContentAlignment="Top" TextWrapping="Wrap"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</uicore:PopupBase>

