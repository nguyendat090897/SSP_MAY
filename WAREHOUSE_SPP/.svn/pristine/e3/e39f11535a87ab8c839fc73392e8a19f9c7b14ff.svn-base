<uicore:ControlBase x:Class="DSofT.Warehouse.UI.frm_ThuocTheoQuocGia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSofT.Warehouse.UI"
             mc:Ignorable="d" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
             xmlns:uicore="clr-namespace:DSofT.Framework.UICore;assembly=DSofT.Framework.UICore"
             xmlns:resText="clr-namespace:DSofT.Warehouse.Resources;assembly=DSofT.Warehouse.Resources"
             xmlns:cntr="clr-namespace:DSofT.Framework.UIControl;assembly=DSofT.Framework.UIControl" 
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Controls="clr-namespace:DSofT.Framework.Metro.UIControls;assembly=DSofT.Framework.Metro.UIControls" 
             d:DesignHeight="600" d:DesignWidth="1600">
    <uicore:ControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DSofT.Warehouse.Resources;component/CommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </uicore:ControlBase.Resources>
    <Grid Background="Transparent">
        <Grid.Resources>
            <cntr:ConverterStringDateTime x:Key="ConverterStringDateTime"/>
        </Grid.Resources>
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:NotificationService x:Name="notificationService" ApplicationId="DxToastTest" UseWin8NotificationsIfAvailable="True" 
                                  PredefinedNotificationTemplate="{Binding ElementName=notificationStyle, Path=SelectedItem}"
                                  CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"
                                  Sound="Notification_Looping_Alarm8"
                                  CustomNotificationPosition="BottomRight" CustomNotificationVisibleMaxCount="5" CustomNotificationDuration="0:0:3"/>
        </dxmvvm:Interaction.Behaviors>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" Grid.Column="0" Grid.Row="0" Text="{StaticResource lblThuocQuocGia}" Width="Auto" HorizontalAlignment="Center" ></TextBlock>
        <TextBlock FontSize="30" Grid.Column="1" Grid.Row="0" Text="{StaticResource lblThuocQuocGia1}" Name="txbTieuDe" Width="Auto" HorizontalAlignment="Center" ></TextBlock>

        <dxg:GridControl Grid.Row="1" Grid.RowSpan="2"  AutoPopulateColumns="True" x:Name="grd"   Grid.Column="1">
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True"  NavigationStyle="Cell" ShowGroupPanel="False" ShowAutoFilterRow="True" SearchPanelFindMode="FindClick" UseAnimationWhenExpanding="False"
                                          x:Name="grdView" SearchPanelFindFilter="Contains" />
            </dxg:GridControl.View>
        </dxg:GridControl>

        <Border x:Name="brDanhMuc" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Width="Auto" Style="{StaticResource Sdk.Brd.BtnArea}">
            <ListView x:Name="lvwDanhMuc" Width="Auto" Height="Auto" >

            </ListView>
        </Border>
    </Grid>
</uicore:ControlBase>
