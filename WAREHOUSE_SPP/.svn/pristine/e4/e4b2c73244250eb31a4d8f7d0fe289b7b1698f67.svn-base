<uicore:ControlBase x:Class="DSofT.Warehouse.UI.frm_GroupMaterial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
             xmlns:uicore="clr-namespace:DSofT.Framework.UICore;assembly=DSofT.Framework.UICore"
             xmlns:resText="clr-namespace:DSofT.Warehouse.Resources;assembly=DSofT.Warehouse.Resources"
             xmlns:cntr="clr-namespace:DSofT.Framework.UIControl;assembly=DSofT.Framework.UIControl" 
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Controls="clr-namespace:DSofT.Framework.Metro.UIControls;assembly=DSofT.Framework.Metro.UIControls" 
             d:DesignHeight="600" d:DesignWidth="1200" >
    <uicore:ControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DSofT.Warehouse.Resources;component/CommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </uicore:ControlBase.Resources>
    <Grid Background="Transparent">
        <Grid.Resources>
            <cntr:ConverterStringDateTime x:Key="ConverterStringDateTime"/>
        </Grid.Resources>
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:NotificationService x:Name="notificationService" ApplicationId="DxToastTest" UseWin8NotificationsIfAvailable="True" 
                                  PredefinedNotificationTemplate="{Binding ElementName=notificationStyle, Path=SelectedItem}"
                                  CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"
                                  Sound="Notification_Looping_Alarm8"
                                  CustomNotificationPosition="BottomRight" CustomNotificationVisibleMaxCount="5" CustomNotificationDuration="0:0:3"/>
        </dxmvvm:Interaction.Behaviors>
        <Grid>
            <!--Main Layout RowDefinition-->
            <Grid.RowDefinitions>
                <!--Button Area-->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <!--Blank-->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>           
            <!--Selection Area Style : row=2-->
            <Border x:Name="BrdBtnWrap" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Sdk.Brd.BtnArea}">
                <StackPanel Style="{StaticResource Sdk.Spnl.CommBtn.Right}">
                    <Button Tag="{StaticResource btnNew}" HorizontalAlignment="Right" Name="btnNew" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnNew_Click"/>
                    <Button Tag="{StaticResource btnSave}" HorizontalAlignment="Right" Name="btnSave" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnSave_Click"/>
                    <Button Tag="{StaticResource btnDelete}" HorizontalAlignment="Right" Name="btnDelete" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnDelete_Click"/>
                    <Button Tag="{StaticResource btnRefresh}" HorizontalAlignment="Right" Name="btnRefresh" Style="{StaticResource Sdk.Btn.Comm}" VerticalAlignment="Center" Click="btnRefresh_Click"/>
                </StackPanel>
            </Border>           
            <dxn:NavBarControl Grid.Row="1" Grid.Column="1" Name="nbcSearch" MouseDown="grdView_MouseDown" Style="{StaticResource Dx.NavBar.CommSchWrap}" Margin="6.85">
                <dxn:NavBarControl.View>
                    <dxn:ExplorerBarView 
                        Style="{StaticResource Dx.NavBar.Explorer.CommSch}" />
                </dxn:NavBarControl.View>
                <dxn:NavBarGroup x:Name="cbgSearch" >
                    <dxn:NavBarItem x:Name="cbiSearch">
                        <Grid x:Name="Selection_Area">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock  Grid.Row="0"   Grid.Column="0" Name="lblGroupMaterialCode" VerticalAlignment="Center"><Run Text="{DynamicResource frmGroupMaterial_GroupMaterialCode}"/> <Run Text="(*)" Foreground="Red" /></TextBlock>
                            <dxe:TextEdit Grid.Row="0" IsEnabled="False" Grid.Column="1" Name="txtGroupMaterialCode" Text="{Binding GroupMaterialCode}"/>

                            <TextBlock  Grid.Row="1"   Grid.Column="0" Name="lblGroupMaterialName" VerticalAlignment="Center"><Run Text="{DynamicResource frmGroupMaterial_GroupMaterialName}"/> <Run Text="(*)" Foreground="Red" /></TextBlock>
                            <dxe:TextEdit Grid.Row="1" Grid.Column="1" Name="txtGroupMaterialName" Text="{Binding GroupMaterialName}"/>

                            <TextBlock  Grid.Row="2"   Grid.Column="0" Name="lblRemark" VerticalAlignment="Center"><Run Text="{DynamicResource frmGroupMaterial_Remark}"/> <Run Foreground="Red" /></TextBlock>
                            <dxe:TextEdit Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Name="txtRemark" Text="{Binding Remark}"/>
                        </Grid>
                    </dxn:NavBarItem>
                </dxn:NavBarGroup>
            </dxn:NavBarControl>
       
            <!--Selection Area Style : row=2-->
            <Grid Grid.Row="2" x:Name="Body_Area" Grid.Column="0" Style="{StaticResource Sdk.Grd.BodyWrap.Vessel}">
                <dxg:GridControl AutoPopulateColumns="True" x:Name="grd"  Grid.Row="1" Grid.Column="0">
                    <dxg:GridControl.View>
                        <dxg:TableView AutoWidth="True" MouseDown="grdView_MouseDown" NavigationStyle="Cell" ShowGroupPanel="False" UseAnimationWhenExpanding="False"
                                          x:Name="grdView" />
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </Grid>
        </Grid>
    </Grid>
</uicore:ControlBase>

